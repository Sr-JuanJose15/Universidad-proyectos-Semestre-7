@model IEnumerable<Colegio_v3.Models.CursoAsignatura>

@{
    ViewBag.Title = "Asignaturas por Curso";
    var agrupadasPorCurso = Model
        .OrderBy(ca => ca.Curso.Grado)
        .ThenBy(ca => ca.Asignatura.Nombre)
        .GroupBy(ca => ca.Curso.Grado);
}

<h2 class="text-center mb-4">Asignaturas por Curso</h2>

<p>
    @Html.ActionLink("Asignar Nueva Asignatura a Curso", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

@foreach (var grupo in agrupadasPorCurso)
{
    <div class="card shadow p-4 mb-4 bg-light rounded">
        <h4 class="mb-3">Curso: @grupo.Key</h4>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr class="table-primary text-center">
                        <th>Asignatura</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in grupo)
                    {
                        <tr>
                            <td>@item.Asignatura.Nombre</td>
                            <td class="text-center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.CursoAsignaturaId }, new { @class = "btn btn-sm btn-primary" })<br />
                                @Html.ActionLink("Detalles", "Details", new { id = item.CursoAsignaturaId }, new { @class = "btn btn-sm btn-info mt-1" })<br />
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.CursoAsignaturaId }, new
                                {
                                    @class = "btn btn-sm btn-danger mt-1",
                                    onclick = "return confirm('¿Estás seguro de que deseas eliminar este registro?');"
                                })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
