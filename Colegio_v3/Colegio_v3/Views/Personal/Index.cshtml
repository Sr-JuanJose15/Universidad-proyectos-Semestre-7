@model IEnumerable<Colegio_v3.Models.Personal>

@{
    ViewBag.Title = "Personal";
}

<h2 class="text-center mb-4">Listado de Personal</h2>

<p>
    @Html.ActionLink("Crear Nuevo Personal", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<div class="card shadow p-4 bg-white rounded">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr class="table-primary text-center">
                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                    <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombres</td>
                        <td>@item.Apellidos</td>
                        <td>@item.Cargo</td>
                        <td>@item.Direccion</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td class="text-center">
                            @Html.ActionLink("Editar", "Edit", new { id = item.PersonalId }, new { @class = "btn btn-sm btn-primary" })<br />
                            @Html.ActionLink("Detalles", "Details", new { id = item.PersonalId }, new { @class = "btn btn-sm btn-info mt-1" })<br />
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.PersonalId }, new
                            {
                                @class = "btn btn-sm btn-danger mt-1",
                                onclick = "return confirm('¿Estás seguro de que deseas eliminar este registro?, si eliminas Este Personal Eliminas los datos relacionados con el mismo (Curso, Materias Docente)');"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
